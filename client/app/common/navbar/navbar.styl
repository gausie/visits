@import '../common'
@require 'jeet'

.navbar
  background-color white
  padding 0.5rem 1rem
  position fixed
  top 0
  left 0
  width 100%
  min-height 4rem
  z-index 1
  &__inner
  	padding 0 2rem
  	&__settings
  		position absolute
  		box-sizing border-box
  		right 1rem
  		top 1.1rem
  		width 1.8rem
  		height 1.8rem
  		background-size 96%
  		background-position center center
  		background-repeat no-repeat
  		background-image url(settings.png)
  	&__profile
  		position absolute
  		left 1rem
  		top 1.1rem
  		height 1.8rem
  		background-size 1.8rem 1.8rem
  		padding-left 3rem
  		padding-top 0rem
  		background-repeat no-repeat
  		background-image url(baby.png)
  		background-position left center
  		color $darkTextColor
  		font-size 1.2rem
