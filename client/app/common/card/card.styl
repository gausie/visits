@import "../common"

.card
  position: relative
  color white
  font-weight 300
  padding 1em

  &--active
    background-color rgba(0,0,0,.125)

  &:hover, &:active
    background-color rgba(0,0,0,.125)

  span
    display block
    margin-bottom 0.3rem

  &__title
    font-style italic

  &__date
    font-size 150%
    font-weight 300

  &__time
    font-weight 300

  &__message
    font-weight 600
    margin-top 1rem
